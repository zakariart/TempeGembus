<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_background"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_siswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_siswa"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/foto_profil" />

            <TextView
                android:id="@+id/nama_siswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/profile_image_siswa"
                android:layout_toRightOf="@id/profile_image_siswa"
                android:text="Nama Siswa"
                android:textSize="18sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_on"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="10dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_off"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="visible"
                app:civ_border_color="#bfbfbf"
                app:civ_border_width="10dp" />

            <TextView
                android:id="@+id/last_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_siswa"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/profile_image_siswa"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/usia_siswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_siswa"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/profile_image_siswa"
                android:maxLines="1"
                android:text="Usia"
                android:textColor="@color/colorPrimaryDark" />

            <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/panah"-->
            <!--android:background="@drawable/ic_chevron_right_black_36dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"/>-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>